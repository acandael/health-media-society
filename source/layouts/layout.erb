<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Health, Media & Society<%= " - #{current_page.data.title}" || "The Middleman" if current_page.path != "index.html" %></title>
    <meta name="description" content="<%= current_page.data.description %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="aJS1dCgsdgVWjB-1rEiiDnzTsvEx-BBs6AxDpAHAi_I" />
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
    <link href='http://fonts.googleapis.com/css?family=Oxygen:400,300,700'
  rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %> texture">
    <div id="main" role="main" class="texture-normal">
      <%= partial "partials/nav" %>
      <%= yield %>
      <div class="push"></div>
    </div>
    <%= partial "partials/footer" %>
  </body>
</html>
